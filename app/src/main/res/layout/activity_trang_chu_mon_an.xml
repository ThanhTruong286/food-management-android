<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerLayout"
    tools:context=".MonAn.TrangChuMonAn">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Quan Ly Mon An"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        />
    <EditText
        android:id="@+id/maKH_tinhTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ma Khach Hang"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tinh Tong Tien"
        android:id="@+id/edtTinhT_them"/>
    <TextView
        android:id="@+id/tvTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="#FFFFFF"
        />

    <ListView
        android:id="@+id/lvDanhSachMonAn"
        android:layout_width="match_parent"
        android:layout_height="365dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnDocDLMonAn"
            android:text="Doc Du Lieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnThemMonAn"
            android:text="Them Mon An"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnTinhTien"
        android:text="Quay Lai Them Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnThoatMA"
        android:text="Thoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>